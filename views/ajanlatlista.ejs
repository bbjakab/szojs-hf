<%- include('header') -%>
<div class="text-center">
    <h2>Aktuális ajánlatok</h2>
</div>

<%- include('menu') -%>
<div class="container">
    <table class="table table-sm table-bordered table-striped">
        <thead class="text-center">
            <tr>
                <th>Név</th>
                <th>Leírás</th>
                <th>Ár</th>
            </tr>
        </thead>
        <tbody class="text-left">
            <% if (locals.ajanlatok !== 'undefined') {%>
            <% locals.ajanlatok.forEach(function(ajanlat) {%>
            <tr>
                <td>
                    <%= ajanlat.nev%>
                </td>
                <td>
                    <%= ajanlat.leiras%>
                </td>
                <td>
                    <%= ajanlat.ar%> Ft
                </td>
                <td>
                    <a href="/elado/<%= ajanlat._elado._id %>/ajanlat" class="btn btn-sm btn-primary">Ugrás az eladóhoz</a>
                </td>
            </tr>
            <% });}%>
        </tbody>
    </table>
</div>
<%- include('footer') -%>