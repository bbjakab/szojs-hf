<%- include('header') -%>
<div class="text-center">
    <h2>Ajánlat
        <% if (typeof ajanlat === 'undefined') { %>
            hozzáadása
        <% }else{ %>
            szerkesztése
        <% } %>
    </h2>
</div>

<form method="post">
    <div class="form-group col-auto">
        <label for="nev">Név: </label>
        <input type="text" id="nev" name="nev" autocomplete="off" class="form-control" required
               value="<%= (typeof ajanlat === "undefined" ) ? '' : ajanlat.nev %>"><br>
    </div>
    <div class="form-group col-auto">
        <label for="elado">Eladó: </label>
        <input type="text" id="elado" name="elado" autocomplete="off" class="form-control" required disabled
               value="<%=elado.nev %>"><br>
    </div>
    <div class="form-group col-auto">
        <label for="leiras">Leírás: </label>
        <input type="text" id="leiras" name="leiras" autocomplete="off" class="form-control"
               value="<%= (typeof ajanlat === "undefined" ) ? '' : ajanlat.leiras %>"><br>
    </div>
    <div class="form-group col-auto">
        <label for="ar">Ár (Ft): </label>
        <input type="number" id="ar" name="ar" autocomplete="off" class="form-control" required
               value="<%= (typeof ajanlat === "undefined" ) ? '' : ajanlat.ar %>"><br>
    </div>
    <div class="col-auto">
        <a href="/elado/<%= elado._id %>/ajanlat" class="btn btn-danger">Mégse</a>
        <input type="submit" class="btn btn-primary" value="Mentés"/>
    </div>
</form>
<%- include('footer') -%>