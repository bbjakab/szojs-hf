<%- include('header') -%>
<div class="text-center">
    <h2>Eladó
        <% if (typeof elado === 'undefined') { %>
            hozzáadása
        <% }else{ %>
            szerkesztése
        <% } %>
    </h2>
</div>

<form method="post">
    <div class="form-group col-auto">
        <label for="nev">Név: </label>
        <input type="text" id="nev" name="nev" autocomplete="off" class="form-control" required
               value="<%= (typeof elado === "undefined" ) ? '' : elado.nev %>"><br>
    </div>
    <div class="form-group col-auto">
        <label for="cim">Cím: </label>
        <input type="text" id="cim" name="cim" autocomplete="off" class="form-control"
               value="<%= (typeof elado === "undefined" ) ? '' : elado.cim %>"><br>
    </div>
    <div class="form-group col-auto">
        <label for="tel">Telefonszám: </label>
        <input type="tel" id="tel" name="tel" autocomplete="off" class="form-control"
               value="<%= (typeof elado === "undefined" ) ? '' : elado.tel %>"><br>
    </div>
    <div class="col-auto">
        <a href="/elado" class="btn btn-danger">Mégse</a>
        <input type="submit" class="btn btn-primary" value="Mentés"/>
    </div>
</form>
<%- include('footer') -%>